{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.9",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.0",
        "laravel/passport": "^12.4",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.75",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Domain\\": "app/Domain/",
            "App\\Infrastructure\\": "app/Infrastructure/",
            "App\\Application\\": "app/Application/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": "phpunit",
        "test:happy": "phpunit --group happy",
        "test:unit": "phpunit --testsuite Unit",
        "test:unit:happy": "phpunit --testsuite Unit --group happy",
        "test:feature": "phpunit --testsuite Feature",
        "test:feature:happy": "phpunit --testsuite Feature --group happy",
        "test:services": "phpunit --filter Services",
        "test:external": "phpunit --filter External",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:check:modified": "FILES=$(git diff --name-only | grep '\\.php$') && if [ -n \"$FILES\" ]; then php-cs-fixer fix --dry-run --diff $FILES; else echo \"No hay archivos PHP modificados.\"; fi",
        "cs:fix": "php-cs-fixer fix",
        "cs:fix:modified": "FILES=$(git diff --name-only | grep '\\.php$') && if [ -n \"$FILES\" ]; then php-cs-fixer fix $FILES; else echo \"No hay archivos PHP modificados.\"; fi",
        "cs:fix:staged": "FILES=$(git diff --cached --name-only | grep '\\.php$') && if [ -n \"$FILES\" ]; then php-cs-fixer fix $FILES; else echo \"No hay archivos PHP modificados en staged.\"; fi",
        "lint": "@cs:check",
        "lint:modified": "@cs:check:modified",
        "format": "@cs:fix",
        "format:modified": "@cs:fix:modified",
        "format:staged": "@cs:fix:staged"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
